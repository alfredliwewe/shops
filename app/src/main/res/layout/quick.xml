<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingLeft="20dp" android:paddingTop="25dp" android:paddingRight="20dp" android:background="#ffffff">
    <TextView android:text="Quick Actions" android:textStyle="bold" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" />
    <View android:layout_height="1dp" android:layout_width="match_parent" android:background="#cccccc" />

    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:paddingTop="30dp">
    	<LinearLayout android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight=".33" android:onClick="shops" android:orientation="vertical" android:gravity="center">
    		<ImageView android:src="@drawable/ic_shop" android:layout_width="30dp" android:layout_height="30dp" />
    		<TextView android:text="Shops" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" />
    	</LinearLayout>

    	<LinearLayout android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight=".33" android:orientation="vertical" android:onClick="reports" android:gravity="center">
    		<ImageView android:src="@drawable/ic_reports" android:layout_width="30dp" android:layout_height="30dp" />
    		<TextView android:text="Reports" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" />
    	</LinearLayout>

    	<LinearLayout android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight=".33" android:orientation="vertical" android:onClick="products" android:gravity="center">
    		<ImageView android:src="@drawable/ic_bulb" android:layout_width="30dp" android:layout_height="30dp" />
    		<TextView android:text="Products" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" />
    	</LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:paddingTop="20dp" android:onClick="stock" android:paddingBottom="40dp">
    	<LinearLayout android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight=".33" android:orientation="vertical" android:gravity="center">
    		<ImageView android:src="@drawable/ic_storage" android:layout_width="30dp" android:layout_height="30dp" />
    		<TextView android:text="Manage Stock" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" />
    	</LinearLayout>

    	<LinearLayout android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight=".33" android:orientation="vertical" android:onClick="sales" android:gravity="center">
    		<ImageView android:src="@drawable/ic_money" android:layout_width="30dp" android:layout_height="30dp" />

			<TextView
				android:id="@+id/notif"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:text="Sales" />
    	</LinearLayout>

    	<LinearLayout android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight=".33" android:orientation="vertical" android:onClick="logout" android:gravity="center">
    		<ImageView android:src="@drawable/ic_power" android:layout_width="30dp" android:layout_height="30dp" />
    		<TextView android:text="Exit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" />
    	</LinearLayout>
    </LinearLayout>
</LinearLayout>